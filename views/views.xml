<odoo>
  <data>

    <record model="ir.ui.view" id="view_account_payment_form">
      <field name="inherit_id" ref="account.view_account_payment_form"/>
      <field name="model">account.payment</field>
      <field name="arch" type="xml">
        <field name="communication" position="after">
          <field name='company_currency_id' invisible="1"/>
          <field name="amount_residual" attrs="{'invisible':['|','|',('state','=','draft'),('payment_type','=','transfer'),('currency_id','!=','company_currency_id')]}"/>
          <field name="amount_residual_currency" attrs="{'invisible':['|','|',('state','=','draft'),('payment_type','=','transfer'),('currency_id','=','company_currency_id')]}"/>
        </field>
      </field>
    </record>

  </data>
</odoo>